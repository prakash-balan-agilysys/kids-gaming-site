{
    "theme": {
        "name": "Kids Gaming Theme",
        "version": "1.0.0",
        "colors": {
            "primary": "#FFDF00",
            "accent": "#004040",
            "background": "#ffffff",
            "text": "#1f2937",
            "textLight": "#6b7280",
            "border": "#e5e7eb",
            "success": "#10b981",
            "warning": "#f59e0b",
            "error": "#ef4444"
        },
        "font": {
            "family": "'Inter', -apple-system, BlinkMacSystemFont, sans-serif",
            "sizes": {
                "small": "0.875rem",
                "base": "1rem",
                "large": "1.125rem",
                "xl": "1.25rem",
                "2xl": "1.5rem",
                "3xl": "2rem"
            },
            "weights": {
                "normal": "400",
                "medium": "500",
                "semibold": "600",
                "bold": "700"
            }
        },
        "spacing": {
            "xs": "0.25rem",
            "sm": "0.5rem",
            "base": "1rem",
            "lg": "1.5rem",
            "xl": "2rem",
            "2xl": "3rem",
            "3xl": "4rem"
        },
        "borderRadius": {
            "sm": "4px",
            "base": "8px",
            "lg": "12px",
            "xl": "16px",
            "full": "9999px"
        },
        "shadows": {
            "sm": "0 1px 2px 0 rgba(0, 0, 0, 0.05)",
            "base": "0 4px 6px -1px rgba(0, 0, 0, 0.1)",
            "lg": "0 10px 15px -3px rgba(0, 0, 0, 0.1)",
            "xl": "0 20px 25px -5px rgba(0, 0, 0, 0.1)"
